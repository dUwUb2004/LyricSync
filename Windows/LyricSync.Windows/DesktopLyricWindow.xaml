<Window x:Class="LyricSync.Windows.DesktopLyricWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="桌面歌词" Height="220" Width="720"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True">
    <Grid>
        <Border x:Name="BackgroundBorder" 
                Background="{Binding BackgroundColor}" 
                CornerRadius="{Binding CornerRadius}" 
                Padding="{Binding Padding}" 
                MouseLeftButtonDown="Border_MouseLeftButtonDown">
            <Border.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="锁定窗口" IsCheckable="True" IsChecked="{Binding IsLocked, Mode=TwoWay}"/>
                    <MenuItem Header="显示翻译" IsCheckable="True" IsChecked="{Binding ShowTranslation, Mode=TwoWay}"/>
                    <Separator/>
                    <MenuItem Header="关闭" Click="Close_Click"/>
                </ContextMenu>
            </Border.ContextMenu>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 顶部控制按钮（无背景，按下高亮） -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                    <Button Width="36" Height="28" Margin="4,0" Click="PrevButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#44FFFFFF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <iconPacks:PackIconMaterial Kind="SkipPrevious" Width="20" Height="20" Foreground="White"/>
                    </Button>
                    <Button Width="48" Height="28" Margin="4,0" Click="PlayPauseButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#44FFFFFF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <iconPacks:PackIconMaterial Kind="PlayPause" Width="24" Height="24" Foreground="White"/>
                    </Button>
                    <Button Width="36" Height="28" Margin="4,0" Click="NextButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#44FFFFFF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <iconPacks:PackIconMaterial Kind="SkipNext" Width="20" Height="20" Foreground="White"/>
                    </Button>
                </StackPanel>

                <!-- 歌词内容 -->
                <StackPanel Grid.Row="1">
                    <!-- 主歌词 - 使用Grid实现描边效果 -->
                    <Grid>
                        <!-- 描边层 - 8个方向的描边 -->
                        <TextBlock x:Name="MainLyricStroke1" Text="{Binding CurrentLine.Text}" FontSize="{Binding MainLyricFontSize}" FontFamily="{Binding MainLyricFontFamily}" Foreground="{Binding MainLyricStrokeColor}" TextAlignment="Center" TextWrapping="Wrap" Margin="-1,-1,0,0"/>
                        <TextBlock x:Name="MainLyricStroke2" Text="{Binding CurrentLine.Text}" FontSize="{Binding MainLyricFontSize}" FontFamily="{Binding MainLyricFontFamily}" Foreground="{Binding MainLyricStrokeColor}" TextAlignment="Center" TextWrapping="Wrap" Margin="1,-1,0,0"/>
                        <TextBlock x:Name="MainLyricStroke3" Text="{Binding CurrentLine.Text}" FontSize="{Binding MainLyricFontSize}" FontFamily="{Binding MainLyricFontFamily}" Foreground="{Binding MainLyricStrokeColor}" TextAlignment="Center" TextWrapping="Wrap" Margin="-1,1,0,0"/>
                        <TextBlock x:Name="MainLyricStroke4" Text="{Binding CurrentLine.Text}" FontSize="{Binding MainLyricFontSize}" FontFamily="{Binding MainLyricFontFamily}" Foreground="{Binding MainLyricStrokeColor}" TextAlignment="Center" TextWrapping="Wrap" Margin="1,1,0,0"/>
                        <TextBlock x:Name="MainLyricStroke5" Text="{Binding CurrentLine.Text}" FontSize="{Binding MainLyricFontSize}" FontFamily="{Binding MainLyricFontFamily}" Foreground="{Binding MainLyricStrokeColor}" TextAlignment="Center" TextWrapping="Wrap" Margin="0,-1,0,0"/>
                        <TextBlock x:Name="MainLyricStroke6" Text="{Binding CurrentLine.Text}" FontSize="{Binding MainLyricFontSize}" FontFamily="{Binding MainLyricFontFamily}" Foreground="{Binding MainLyricStrokeColor}" TextAlignment="Center" TextWrapping="Wrap" Margin="0,1,0,0"/>
                        <TextBlock x:Name="MainLyricStroke7" Text="{Binding CurrentLine.Text}" FontSize="{Binding MainLyricFontSize}" FontFamily="{Binding MainLyricFontFamily}" Foreground="{Binding MainLyricStrokeColor}" TextAlignment="Center" TextWrapping="Wrap" Margin="-1,0,0,0"/>
                        <TextBlock x:Name="MainLyricStroke8" Text="{Binding CurrentLine.Text}" FontSize="{Binding MainLyricFontSize}" FontFamily="{Binding MainLyricFontFamily}" Foreground="{Binding MainLyricStrokeColor}" TextAlignment="Center" TextWrapping="Wrap" Margin="1,0,0,0"/>
                        <!-- 主文字层 -->
                        <TextBlock x:Name="MainLyricTextBlock"
                                   Text="{Binding CurrentLine.Text}"
                                   FontSize="{Binding MainLyricFontSize}"
                                   FontFamily="{Binding MainLyricFontFamily}"
                                   Foreground="{Binding MainLyricColor}"
                               TextAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </Grid>
                    <!-- 翻译歌词 - 使用Grid实现描边效果 -->
                    <Grid Margin="0,6,0,0">
                        <!-- 描边层 - 8个方向的描边 -->
                        <TextBlock x:Name="TranslationStroke1" Text="{Binding CurrentLine.Translation}" FontSize="{Binding TranslationFontSize}" FontFamily="{Binding TranslationFontFamily}" Foreground="{Binding TranslationStrokeColor}" TextAlignment="Center" TextWrapping="Wrap" Margin="-1,-1,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ShowTranslation}" Value="True"/>
                                                <Condition Binding="{Binding CurrentLine.HasTranslation}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock x:Name="TranslationStroke2" Text="{Binding CurrentLine.Translation}" FontSize="{Binding TranslationFontSize}" FontFamily="{Binding TranslationFontFamily}" Foreground="{Binding TranslationStrokeColor}" TextAlignment="Center" TextWrapping="Wrap" Margin="1,-1,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ShowTranslation}" Value="True"/>
                                                <Condition Binding="{Binding CurrentLine.HasTranslation}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock x:Name="TranslationStroke3" Text="{Binding CurrentLine.Translation}" FontSize="{Binding TranslationFontSize}" FontFamily="{Binding TranslationFontFamily}" Foreground="{Binding TranslationStrokeColor}" TextAlignment="Center" TextWrapping="Wrap" Margin="-1,1,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ShowTranslation}" Value="True"/>
                                                <Condition Binding="{Binding CurrentLine.HasTranslation}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock x:Name="TranslationStroke4" Text="{Binding CurrentLine.Translation}" FontSize="{Binding TranslationFontSize}" FontFamily="{Binding TranslationFontFamily}" Foreground="{Binding TranslationStrokeColor}" TextAlignment="Center" TextWrapping="Wrap" Margin="1,1,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ShowTranslation}" Value="True"/>
                                                <Condition Binding="{Binding CurrentLine.HasTranslation}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock x:Name="TranslationStroke5" Text="{Binding CurrentLine.Translation}" FontSize="{Binding TranslationFontSize}" FontFamily="{Binding TranslationFontFamily}" Foreground="{Binding TranslationStrokeColor}" TextAlignment="Center" TextWrapping="Wrap" Margin="0,-1,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ShowTranslation}" Value="True"/>
                                                <Condition Binding="{Binding CurrentLine.HasTranslation}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock x:Name="TranslationStroke6" Text="{Binding CurrentLine.Translation}" FontSize="{Binding TranslationFontSize}" FontFamily="{Binding TranslationFontFamily}" Foreground="{Binding TranslationStrokeColor}" TextAlignment="Center" TextWrapping="Wrap" Margin="0,1,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ShowTranslation}" Value="True"/>
                                                <Condition Binding="{Binding CurrentLine.HasTranslation}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock x:Name="TranslationStroke7" Text="{Binding CurrentLine.Translation}" FontSize="{Binding TranslationFontSize}" FontFamily="{Binding TranslationFontFamily}" Foreground="{Binding TranslationStrokeColor}" TextAlignment="Center" TextWrapping="Wrap" Margin="-1,0,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ShowTranslation}" Value="True"/>
                                                <Condition Binding="{Binding CurrentLine.HasTranslation}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock x:Name="TranslationStroke8" Text="{Binding CurrentLine.Translation}" FontSize="{Binding TranslationFontSize}" FontFamily="{Binding TranslationFontFamily}" Foreground="{Binding TranslationStrokeColor}" TextAlignment="Center" TextWrapping="Wrap" Margin="1,0,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ShowTranslation}" Value="True"/>
                                                <Condition Binding="{Binding CurrentLine.HasTranslation}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                    </TextBlock>
                        <!-- 主文字层 -->
                        <TextBlock x:Name="TranslationTextBlock"
                                   Text="{Binding CurrentLine.Translation}"
                                   FontSize="{Binding TranslationFontSize}"
                                   FontFamily="{Binding TranslationFontFamily}"
                                   Foreground="{Binding TranslationColor}"
                               TextAlignment="Center"
                               TextWrapping="Wrap">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding ShowTranslation}" Value="True"/>
                                            <Condition Binding="{Binding CurrentLine.HasTranslation}" Value="True"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>

