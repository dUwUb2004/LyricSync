<Window x:Class="LyricSync.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="设置" Height="450" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel>
            <!-- 桌面歌词设置 -->
            <GroupBox Header="桌面歌词设置" Margin="0,0,0,20" Padding="15">
                <StackPanel>
                    <!-- 显示翻译 -->
                    <CheckBox x:Name="ShowTranslationCheckBox" 
                              Content="显示翻译"
                              Margin="0,0,0,15"
                              FontSize="14"/>
                    
                    <!-- 锁定窗口 -->
                    <CheckBox x:Name="LockWindowCheckBox"
                              Content="锁定窗口（禁止拖动）"
                              Margin="0,0,0,15"
                              FontSize="14"/>
                    
                    <!-- 点击穿透 -->
                    <CheckBox x:Name="ClickThroughCheckBox"
                              Content="点击穿透（鼠标点击不响应）"
                              Margin="0,0,0,15"
                              FontSize="14"/>
                    
                    <!-- 透明度设置 -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="透明度" FontSize="14" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <Slider x:Name="OpacitySlider"
                                    Minimum="20" Maximum="100"
                                    Value="90"
                                    Width="200"
                                    VerticalAlignment="Center"
                                    ValueChanged="OpacitySlider_ValueChanged"/>
                            <TextBlock x:Name="OpacityValueText"
                                       Text="90%"
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- 字体大小 -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="主歌词字体大小" FontSize="14" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <Slider x:Name="FontSizeSlider"
                                    Minimum="18" Maximum="48"
                                    Value="28"
                                    Width="200"
                                    VerticalAlignment="Center"
                                    ValueChanged="FontSizeSlider_ValueChanged"/>
                            <TextBlock x:Name="FontSizeValueText"
                                       Text="28"
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            
            <!-- 网易云API设置 -->
            <GroupBox Header="网易云API设置" Margin="0,0,0,20" Padding="15">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="API地址:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox x:Name="ApiUrlTextBox"
                                 Text="http://localhost:3000"
                                 Width="200"
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button x:Name="TestApiButton"
                            Content="测试API连接"
                            Width="120"
                            HorizontalAlignment="Left"
                            Click="TestApiButton_Click"/>
                </StackPanel>
            </GroupBox>
            
            <!-- 操作按钮 -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="SaveButton"
                        Content="保存"
                        Width="80"
                        Height="30"
                        Margin="0,0,10,0"
                        Click="SaveButton_Click"/>
                <Button x:Name="CancelButton"
                        Content="取消"
                        Width="80"
                        Height="30"
                        Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
