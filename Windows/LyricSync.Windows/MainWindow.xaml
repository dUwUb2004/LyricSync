<Window x:Class="LyricSync.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="LyricSync - 音乐同步" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <!-- 按钮样式 -->
        <Style x:Key="ControlButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#303f9f"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3f51b5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#303f9f"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 卡片样式 -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#20000000" Direction="270" ShadowDepth="3" BlurRadius="10"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="#303f9f" Padding="20,15">
            <StackPanel Orientation="Horizontal">
                <iconPacks:PackIconMaterial Kind="Music" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,15,0" Foreground="White"/>
                <TextBlock Text="LyricSync" FontSize="24" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                <TextBlock Text="音乐同步" FontSize="16" Foreground="#E0E0E0" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- 主内容区域 -->
        <Grid Grid.Row="1">
            <!-- 主页内容 -->
            <Grid x:Name="MainPageGrid" Visibility="Visible">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                <!-- 连接状态卡片 -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="连接状态" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock x:Name="StatusText" Text="未监听" FontSize="16" Foreground="#666"/>
                                <TextBlock x:Name="StatusDescription" Text="请确保安卓端已启动并授予权限" FontSize="14" Foreground="#999" Margin="0,5,0,0"/>
                            </StackPanel>
                            
                            <Button x:Name="ConnectButton" Grid.Column="1" 
                                    Content="开始监听" 
                                    Style="{StaticResource ControlButtonStyle}"
                                    Click="ConnectButton_Click"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- 音乐信息卡片 -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="当前播放" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <!-- 专辑封面占位符 -->
                        <Border Width="120" Height="120" Background="#F0F0F0" CornerRadius="8" 
                                HorizontalAlignment="Center" Margin="0,0,0,20">
                            <iconPacks:PackIconMaterial Kind="Music" Width="48" Height="48" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#999"/>
                        </Border>
                        
                        <!-- 音乐信息 -->
                        <TextBlock x:Name="SongTitle" Text="未播放" FontSize="20" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock x:Name="ArtistName" Text="" FontSize="16" Foreground="#666" 
                                   HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock x:Name="AlbumName" Text="" FontSize="14" Foreground="#999" 
                                   HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        
                        <!-- 播放进度条 -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock x:Name="CurrentTime" Grid.Column="0" Text="0:00" FontSize="12" Foreground="#666"/>
                            <ProgressBar x:Name="ProgressBar" Grid.Column="1" Height="4" Margin="10,0" 
                                         Background="#E0E0E0" Foreground="#303f9f" VerticalAlignment="Center"/>
                            <TextBlock x:Name="TotalTime" Grid.Column="2" Text="0:00" FontSize="12" Foreground="#666"/>
                        </Grid>
                        
                        <!-- 播放控制按钮 -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button x:Name="PreviousButton" Style="{StaticResource ControlButtonStyle}" 
                                    Click="PreviousButton_Click">
                                <iconPacks:PackIconMaterial Kind="SkipPrevious" Width="20" Height="20" Foreground="White"/>
                            </Button>
                            <Button x:Name="PlayPauseButton" Style="{StaticResource ControlButtonStyle}" 
                                    Click="PlayPauseButton_Click">
                                <iconPacks:PackIconMaterial Kind="Pause" Width="20" Height="20" Foreground="White"/>
                            </Button>
                            <Button x:Name="NextButton" Style="{StaticResource ControlButtonStyle}" 
                                    Click="NextButton_Click">
                                <iconPacks:PackIconMaterial Kind="SkipNext" Width="20" Height="20" Foreground="White"/>
                            </Button>
                        </StackPanel>
                        
                        <!-- 控制按钮 -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                            <Button x:Name="TestSearchButton" Style="{StaticResource ControlButtonStyle}"
                                    Click="TestSearchButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="TestTube" Width="16" Height="16" Foreground="White" Margin="0,0,5,0"/>
                                    <TextBlock Text="测试搜索" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="ExportLrcButton" Style="{StaticResource ControlButtonStyle}"
                                    Click="ExportLrcButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="FileDocument" Width="16" Height="16" Foreground="White" Margin="0,0,5,0"/>
                                    <TextBlock Text="导出LRC歌词" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="ShowLyricButton" Style="{StaticResource ControlButtonStyle}"
                                    Click="ShowLyricButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="AutoFix" Width="16" Height="16" Foreground="White" Margin="0,0,5,0"/>
                                    <TextBlock Text="显示歌词" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="ShowDesktopLyricButton" Style="{StaticResource ControlButtonStyle}"
                                    Click="ShowDesktopLyricButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="WindowOpen" Width="16" Height="16" Foreground="White" Margin="0,0,5,0"/>
                                    <TextBlock Text="桌面歌词" Foreground="White"/>
                                </StackPanel>
                            </Button>
                                
                            <Button x:Name="SettingsButton" Style="{StaticResource ControlButtonStyle}"
                                    Click="SettingsButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="Cog" Width="16" Height="16" Foreground="White" Margin="0,0,5,0"/>
                                    <TextBlock Text="设置" Foreground="White"/>
                                </StackPanel>
                            </Button>

                        </StackPanel>
                        

                        <!-- 匹配歌曲信息 -->
                        <Expander x:Name="MatchedSongExpander" Margin="0,20,0,0" IsExpanded="False">
                            <Expander.Header>
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="Target" Width="16" Height="16" Foreground="#303f9f" Margin="0,0,5,0"/>
                                    <TextBlock Text="网易云匹配信息" Foreground="#303f9f"/>
                                </StackPanel>
                            </Expander.Header>
                            <StackPanel x:Name="MatchedSongPanel" Margin="0,10,0,0">
                                <!-- 封面和歌曲信息布局 -->
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- 专辑封面 -->
                                    <Border Grid.Column="0" Width="80" Height="80" 
                                            Background="#F0F0F0" CornerRadius="8" 
                                            Margin="0,0,15,0" BorderBrush="#E0E0E0" BorderThickness="1">
                                        <Grid>
                                            <Image x:Name="AlbumCoverImage" Stretch="UniformToFill" 
                                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                                            <!-- 默认音符图标 -->
                                            <iconPacks:PackIconMaterial x:Name="DefaultMusicIcon" Kind="Music" Width="32" Height="32" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                       Foreground="#999"/>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- 歌曲基本信息 -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Top">
                                        <TextBlock x:Name="MatchedSongTitle" Text="未找到匹配歌曲" 
                                                   FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
                                        <TextBlock x:Name="MatchedSongArtist" Text="" 
                                                   FontSize="14" Foreground="#666" Margin="0,0,0,4"/>
                                        <TextBlock x:Name="MatchedSongAlbum" Text="" 
                                                   FontSize="14" Foreground="#666" Margin="0,0,0,4"/>
                                        <TextBlock x:Name="MatchedSongDuration" Text="" 
                                                   FontSize="14" Foreground="#666" Margin="0,0,0,4"/>
                                        <TextBlock x:Name="MatchedSongId" Text="" 
                                                   FontSize="14" Foreground="#666" Margin="0,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- JSON信息显示 -->
                                <Expander Margin="0,10,0,0" IsExpanded="False">
                                    <Expander.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial Kind="FileDocument" Width="16" Height="16" Foreground="#303f9f" Margin="0,0,5,0"/>
                                            <TextBlock Text="完整JSON数据" Foreground="#303f9f"/>
                                        </StackPanel>
                                    </Expander.Header>
                                    <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
                                        <TextBox x:Name="JsonDisplayTextBox" IsReadOnly="True" 
                                                 Background="#F8F8F8" BorderThickness="0" 
                                                 FontFamily="Consolas" FontSize="11" 
                                                 TextWrapping="Wrap"/>
                                    </ScrollViewer>
                                </Expander>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </Border>
                
                <!-- 日志信息卡片 -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="连接日志" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,15">
                                <Button x:Name="ClearLogButton" Style="{StaticResource ControlButtonStyle}" Margin="0,0,5,0"
                                        Click="ClearLogButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="Broom" Width="16" Height="16" Foreground="White" Margin="0,0,5,0"/>
                                        <TextBlock Text="清理日志" Foreground="White"/>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="LogInfoButton" Style="{StaticResource ControlButtonStyle}"
                                        Click="LogInfoButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="ChartLine" Width="16" Height="16" Foreground="White" Margin="0,0,5,0"/>
                                        <TextBlock Text="日志信息" Foreground="White"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                        
                        <ScrollViewer Height="150" VerticalScrollBarVisibility="Auto">
                            <TextBox x:Name="LogTextBox" IsReadOnly="True" Background="#F8F8F8" 
                                     BorderThickness="0" FontFamily="Consolas" FontSize="12"/>
                        </ScrollViewer>
                        
                        <TextBlock x:Name="LogStatusText" Text="日志状态: 正常" FontSize="12" Foreground="#666" 
                                   Margin="0,10,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
            
            <!-- 设置页面内容 -->
            <Grid x:Name="SettingsPageGrid" Visibility="Collapsed">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <!-- 返回按钮 -->
                        <Button x:Name="BackToMainButton" 
                                HorizontalAlignment="Left"
                                Margin="0,0,0,20"
                                Style="{StaticResource ControlButtonStyle}"
                                Click="BackToMainButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="ArrowLeft" Width="16" Height="16" Foreground="White" Margin="0,0,5,0"/>
                                <TextBlock Text="返回主页" Foreground="White"/>
                            </StackPanel>
                        </Button>
                        <!-- 桌面歌词设置 -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="桌面歌词设置" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- 左列 -->
                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <CheckBox x:Name="DesktopShowTranslationCheckBox" 
                                                  Content="显示翻译" 
                                                  Margin="0,0,0,15"
                                                  IsChecked="True"
                                                  Checked="DesktopSettings_Changed"
                                                  Unchecked="DesktopSettings_Changed"/>
                                        <CheckBox x:Name="DesktopLockWindowCheckBox"
                                                  Content="锁定窗口"
                                                  Margin="0,0,0,15"
                                                  Checked="DesktopSettings_Changed"
                                                  Unchecked="DesktopSettings_Changed"/>
                                        <CheckBox x:Name="DesktopClickThroughCheckBox"
                                                  Content="点击穿透"
                                                  Margin="0,0,0,15"
                                                  Checked="DesktopSettings_Changed"
                                                  Unchecked="DesktopSettings_Changed"/>
                                    </StackPanel>
                                    
                                    <!-- 右列 -->
                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <StackPanel Margin="0,0,0,15">
                                            <TextBlock Text="透明度" FontSize="14" FontWeight="Medium" Margin="0,0,0,8"/>
                                            <StackPanel Orientation="Horizontal">
                                                <Slider x:Name="DesktopOpacitySlider"
                                                        Minimum="20" Maximum="100"
                                                        Value="90"
                                                        Width="150"
                                                        ValueChanged="DesktopOpacitySlider_ValueChanged"/>
                                                <TextBlock x:Name="DesktopOpacityText"
                                                           Text="90%"
                                                           Margin="15,0,0,0"
                                                           VerticalAlignment="Center"
                                                           FontWeight="Medium"/>
                                            </StackPanel>
                                        </StackPanel>
                                        
                                        <StackPanel>
                                            <TextBlock Text="字体大小" FontSize="14" FontWeight="Medium" Margin="0,0,0,8"/>
                                            <StackPanel Orientation="Horizontal">
                                                <Slider x:Name="DesktopFontSizeSlider"
                                                        Minimum="18" Maximum="48"
                                                        Value="28"
                                                        Width="150"
                                                        ValueChanged="DesktopFontSizeSlider_ValueChanged"/>
                                                <TextBlock x:Name="DesktopFontSizeText"
                                                           Text="28"
                                                           Margin="15,0,0,0"
                                                           VerticalAlignment="Center"
                                                           FontWeight="Medium"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- 网易云API设置 -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="网易云API设置" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock Text="API地址:" VerticalAlignment="Center" Margin="0,0,15,0" FontWeight="Medium"/>
                                    <TextBox x:Name="ApiUrlTextBox"
                                             Text="http://localhost:3000"
                                             Width="300"
                                             VerticalAlignment="Center"/>
                                </StackPanel>
                                <Button x:Name="TestApiButton"
                                        Content="测试API连接"
                                        Width="120"
                                        HorizontalAlignment="Left"
                                        Style="{StaticResource ControlButtonStyle}"
                                        Click="TestApiButton_Click"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
        
        <!-- 底部状态栏 -->
        <Border Grid.Row="2" Background="#E8E8E8" Padding="20,10" BorderBrush="#D0D0D0" BorderThickness="0,1,0,0">
            <TextBlock x:Name="BottomStatusText" Text="准备就绪" FontSize="12" Foreground="#666"/>
        </Border>
    </Grid>
</Window>
