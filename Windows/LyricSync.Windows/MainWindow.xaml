<Window x:Class="LyricSync.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background="{DynamicResource MaterialDesign.Brush.Background}"
        FontFamily="{materialDesign:MaterialDesignFont}"
        Title="LyricSync - 音乐同步" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MaterialDesignWindow}">

    <Window.Resources>
        <!-- 使用App.xaml中定义的主题资源 -->
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="{DynamicResource MaterialDesign.Brush.Primary}" Padding="20,15">
            <StackPanel Orientation="Horizontal">
                <iconPacks:PackIconMaterial Kind="Music" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,15,0" Foreground="White"/>
                <TextBlock Text="LyricSync" FontSize="24" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                <TextBlock Text="音乐同步" FontSize="16" Foreground="#E0E0E0" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- 主内容区域 -->
        <Grid Grid.Row="1">
            <!-- 主页内容 -->
            <Grid x:Name="MainPageGrid" Visibility="Visible">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                    <StackPanel>
                                        <!-- 连接状态卡片 -->
                        <Border Background="#2D2D30" 
                                CornerRadius="8" 
                                Padding="20" 
                                Margin="15,10"
                                Effect="{DynamicResource MaterialDesignElevationShadow2}">
                    <StackPanel>
                        <TextBlock Text="连接状态" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock x:Name="StatusText" Text="未监听" FontSize="16" Foreground="#666"/>
                                <TextBlock x:Name="StatusDescription" Text="请确保安卓端已启动并授予权限" FontSize="14" Foreground="#999" Margin="0,5,0,0"/>
                            </StackPanel>
                            
                            <Button x:Name="ConnectButton" Grid.Column="1" 
                                    Content="开始监听" 
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Click="ConnectButton_Click"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                                        <!-- 音乐信息卡片 -->
                        <Border Background="#2D2D30" 
                                CornerRadius="8" 
                                Padding="20" 
                                Margin="15,10"
                                Effect="{DynamicResource MaterialDesignElevationShadow2}">
                    <StackPanel>
                        <TextBlock Text="当前播放" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <!-- 专辑封面占位符 -->
                        <Border Width="120" Height="120" Background="#F0F0F0" CornerRadius="8" 
                                HorizontalAlignment="Center" Margin="0,0,0,20" BorderBrush="#E0E0E0" BorderThickness="1">
                            <Grid>
                                <Image x:Name="CurrentPlayingCoverImage" Stretch="UniformToFill" 
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                                <!-- 默认音符图标 -->
                                <iconPacks:PackIconMaterial x:Name="CurrentPlayingDefaultIcon" Kind="Music" Width="48" Height="48" 
                                                           HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#999"/>
                            </Grid>
                        </Border>
                        
                        <!-- 音乐信息 -->
                        <TextBlock x:Name="SongTitle" Text="未播放" FontSize="20" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock x:Name="ArtistName" Text="" FontSize="16" Foreground="#666" 
                                   HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock x:Name="AlbumName" Text="" FontSize="14" Foreground="#999" 
                                   HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        
                        <!-- 播放进度条 -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock x:Name="CurrentTime" Grid.Column="0" Text="0:00" FontSize="12" Foreground="#666"/>
                            <ProgressBar x:Name="ProgressBar" Grid.Column="1" Height="4" Margin="10,0" 
                                         Background="#E0E0E0" Foreground="#303f9f" VerticalAlignment="Center"/>
                            <TextBlock x:Name="TotalTime" Grid.Column="2" Text="0:00" FontSize="12" Foreground="#666"/>
                        </Grid>
                        
                        <!-- 播放控制按钮 -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button x:Name="PreviousButton" Style="{StaticResource MaterialDesignRaisedButton}" 
                                    Margin="0,0,10,0"
                                    Click="PreviousButton_Click">
                                <iconPacks:PackIconMaterial Kind="SkipPrevious" Width="20" Height="20" Foreground="White"/>
                            </Button>
                            <Button x:Name="PlayPauseButton" Style="{StaticResource MaterialDesignRaisedButton}" 
                                    Margin="0,0,10,0"
                                    Click="PlayPauseButton_Click">
                                <iconPacks:PackIconMaterial Kind="Pause" Width="20" Height="20" Foreground="White"/>
                            </Button>
                            <Button x:Name="NextButton" Style="{StaticResource MaterialDesignRaisedButton}" 
                                    Click="NextButton_Click">
                                <iconPacks:PackIconMaterial Kind="SkipNext" Width="20" Height="20" Foreground="White"/>
                            </Button>
                        </StackPanel>
                        
                        <!-- 控制按钮 -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                            <Button x:Name="TestSearchButton" Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Margin="0,0,8,0"
                                    Click="TestSearchButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="TestTube" Width="16" Height="16" Margin="0,0,5,0"/>
                                    <TextBlock Text="测试搜索"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="ExportLrcButton" Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Margin="0,0,8,0"
                                    Click="ExportLrcButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="FileDocument" Width="16" Height="16" Margin="0,0,5,0"/>
                                    <TextBlock Text="导出LRC歌词"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="ShowLyricButton" Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Margin="0,0,8,0"
                                    Click="ShowLyricButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="AutoFix" Width="16" Height="16" Margin="0,0,5,0"/>
                                    <TextBlock Text="显示歌词"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="ShowDesktopLyricButton" Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Margin="0,0,8,0"
                                    Click="ShowDesktopLyricButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="WindowOpen" Width="16" Height="16" Margin="0,0,5,0"/>
                                    <TextBlock Text="桌面歌词"/>
                                </StackPanel>
                            </Button>
                                
                            <Button x:Name="SettingsButton" Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Click="SettingsButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="Cog" Width="16" Height="16" Margin="0,0,5,0"/>
                                    <TextBlock Text="设置"/>
                                </StackPanel>
                            </Button>

                        </StackPanel>
                        

                        <!-- 匹配歌曲信息 -->
                        <Expander x:Name="MatchedSongExpander" Margin="0,20,0,0" IsExpanded="False">
                            <Expander.Header>
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="Target" Width="16" Height="16" Margin="0,0,5,0"/>
                                    <TextBlock Text="网易云匹配信息"/>
                                </StackPanel>
                            </Expander.Header>
                            <StackPanel x:Name="MatchedSongPanel" Margin="0,10,0,0">
                                <!-- 封面和歌曲信息布局 -->
                                <Grid Margin="10,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- 专辑封面 -->
                                    <Border Grid.Column="0" Width="80" Height="80" 
                                            Background="#F0F0F0" CornerRadius="8" 
                                            Margin="0,0,15,0" BorderBrush="#E0E0E0" BorderThickness="1">
                                        <Grid>
                                            <Image x:Name="AlbumCoverImage" Stretch="UniformToFill" 
                                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                                            <!-- 默认音符图标 -->
                                            <iconPacks:PackIconMaterial x:Name="DefaultMusicIcon" Kind="Music" Width="32" Height="32" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                       Foreground="#999"/>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- 歌曲基本信息 -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Top">
                                        <TextBlock x:Name="MatchedSongTitle" Text="未找到匹配歌曲" 
                                                   FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
                                        <TextBlock x:Name="MatchedSongArtist" Text="" 
                                                   FontSize="14" Foreground="#666" Margin="0,0,0,4"/>
                                        <TextBlock x:Name="MatchedSongAlbum" Text="" 
                                                   FontSize="14" Foreground="#666" Margin="0,0,0,4"/>
                                        <TextBlock x:Name="MatchedSongDuration" Text="" 
                                                   FontSize="14" Foreground="#666" Margin="0,0,0,4"/>
                                        <TextBlock x:Name="MatchedSongId" Text="" 
                                                   FontSize="14" Foreground="#666" Margin="0,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- JSON信息显示 -->
                                <Expander Margin="0,10,0,0" IsExpanded="False">
                                    <Expander.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial Kind="FileDocument" Width="16" Height="16" Margin="0,0,5,0"/>
                                            <TextBlock Text="完整JSON数据"/>
                                        </StackPanel>
                                    </Expander.Header>
                                    <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
                                        <TextBox x:Name="JsonDisplayTextBox" IsReadOnly="True" 
                                                 BorderThickness="0" 
                                                 FontFamily="Consolas" FontSize="11" 
                                                 TextWrapping="Wrap"/>
                                    </ScrollViewer>
                                </Expander>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </Border>
                
                                        <!-- 日志信息卡片 -->
                        <Border Background="#2D2D30" 
                                CornerRadius="8" 
                                Padding="20" 
                                Margin="15,10"
                                Effect="{DynamicResource MaterialDesignElevationShadow2}">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="连接日志" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,15">
                                <Button x:Name="ClearLogButton" Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,0,5,0"
                                        Click="ClearLogButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="Broom" Width="16" Height="16" Margin="0,0,5,0"/>
                                        <TextBlock Text="清理日志"/>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="LogInfoButton" Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Click="LogInfoButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="ChartLine" Width="16" Height="16" Margin="0,0,5,0"/>
                                        <TextBlock Text="日志信息"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                        
                        <ScrollViewer Height="150" VerticalScrollBarVisibility="Auto">
                            <TextBox x:Name="LogTextBox" IsReadOnly="True"
                                     BorderThickness="0" FontFamily="Consolas" FontSize="12"/>
                        </ScrollViewer>
                        
                        <TextBlock x:Name="LogStatusText" Text="日志状态: 正常" FontSize="12" Foreground="#666" 
                                   Margin="0,10,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
            
            <!-- 设置页面内容 -->
            <Grid x:Name="SettingsPageGrid" Visibility="Collapsed">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                    <StackPanel>
                        <!-- 返回按钮 -->
                        <Button x:Name="BackToMainButton" 
                                HorizontalAlignment="Left"
                                Margin="15,8,0,20"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Click="BackToMainButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="ArrowLeft" Width="16" Height="16" Foreground="White" Margin="0,0,5,0"/>
                                <TextBlock Text="返回主页" Foreground="White"/>
                            </StackPanel>
                        </Button>
                        <!-- 桌面歌词设置 -->
                        <Border Background="#2D2D30" 
                                CornerRadius="8" 
                                Padding="20" 
                                Margin="15,10"
                                Effect="{DynamicResource MaterialDesignElevationShadow2}">
                            <StackPanel>
                                <TextBlock Text="桌面歌词设置" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- 左列 -->
                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <CheckBox x:Name="DesktopShowTranslationCheckBox" 
                                                  Content="显示翻译" 
                                                  Margin="0,0,0,15"
                                                  IsChecked="True"
                                                  Checked="DesktopSettings_Changed"
                                                  Unchecked="DesktopSettings_Changed"/>
                                        <CheckBox x:Name="DesktopLockWindowCheckBox"
                                                  Content="锁定窗口"
                                                  Margin="0,0,0,15"
                                                  Checked="DesktopSettings_Changed"
                                                  Unchecked="DesktopSettings_Changed"/>
                                        <CheckBox x:Name="DesktopClickThroughCheckBox"
                                                  Content="点击穿透"
                                                  Margin="0,0,0,15"
                                                  Checked="DesktopSettings_Changed"
                                                  Unchecked="DesktopSettings_Changed"/>
                                    </StackPanel>
                                    
                                    <!-- 右列 -->
                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <StackPanel Margin="0,0,0,15">
                                            <TextBlock Text="透明度" FontSize="14" FontWeight="Medium" Margin="0,0,0,8"/>
                                            <StackPanel Orientation="Horizontal">
                                                <Slider x:Name="DesktopOpacitySlider"
                                                        Minimum="20" Maximum="100"
                                                        Value="90"
                                                        Width="150"
                                                        ValueChanged="DesktopOpacitySlider_ValueChanged"/>
                                                <TextBlock x:Name="DesktopOpacityText"
                                                           Text="90%"
                                                           Margin="15,0,0,0"
                                                           VerticalAlignment="Center"
                                                           FontWeight="Medium"/>
                                            </StackPanel>
                                        </StackPanel>
                                        
                                        <StackPanel Margin="0,0,0,15">
                                            <TextBlock Text="字体大小" FontSize="14" FontWeight="Medium" Margin="0,0,0,8"/>
                                            <StackPanel Orientation="Horizontal">
                                                <Slider x:Name="DesktopFontSizeSlider"
                                                        Minimum="18" Maximum="48"
                                                        Value="28"
                                                        Width="150"
                                                        ValueChanged="DesktopFontSizeSlider_ValueChanged"/>
                                                <TextBlock x:Name="DesktopFontSizeText"
                                                           Text="28"
                                                           Margin="15,0,0,0"
                                                           VerticalAlignment="Center"
                                                           FontWeight="Medium"/>
                                            </StackPanel>
                                        </StackPanel>
                                        
                                        <StackPanel>
                                            <TextBlock Text="背景透明度" FontSize="14" FontWeight="Medium" Margin="0,0,0,8"/>
                                            <StackPanel Orientation="Horizontal">
                                                <Slider x:Name="DesktopBackgroundOpacitySlider"
                                                        Minimum="0" Maximum="100"
                                                        Value="40"
                                                        Width="150"
                                                        ValueChanged="DesktopBackgroundOpacitySlider_ValueChanged"/>
                                                <TextBlock x:Name="DesktopBackgroundOpacityText"
                                                           Text="40%"
                                                           Margin="15,0,0,0"
                                                           VerticalAlignment="Center"
                                                           FontWeight="Medium"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- 桌面歌词样式设置 -->
                        <Border Background="#2D2D30" 
                                CornerRadius="8" 
                                Padding="20" 
                                Margin="15,10"
                                Effect="{DynamicResource MaterialDesignElevationShadow2}">
                            <StackPanel>
                                <TextBlock Text="桌面歌词样式设置" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                                
                                <!-- 主歌词样式 -->
                                <GroupBox Header="主歌词样式" Margin="0,0,0,15">
                                    <StackPanel Margin="10">
                                        <StackPanel Orientation="Horizontal" Margin="0,5">
                                            <TextBlock Text="字体:" Width="80" VerticalAlignment="Center"/>
                                            <ComboBox x:Name="MainLyricFontComboBox" Width="150" SelectedItem="{Binding MainLyricFontFamily}"
>
                                                <ComboBoxItem Content="Microsoft YaHei UI"/>
                                                <ComboBoxItem Content="Microsoft YaHei"/>
                                                <ComboBoxItem Content="SimHei"/>
                                                <ComboBoxItem Content="SimSun"/>
                                                <ComboBoxItem Content="Arial"/>
                                                <ComboBoxItem Content="Times New Roman"/>
                                            </ComboBox>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,5">
                                            <TextBlock Text="大小:" Width="80" VerticalAlignment="Center"/>
                                            <Slider x:Name="MainLyricSizeSlider" Width="150" Minimum="12" Maximum="48" 
                                                    Value="{Binding MainLyricFontSize}" TickFrequency="2" IsSnapToTickEnabled="True"
/>
                                            <TextBlock x:Name="MainLyricSizeText" Text="{Binding MainLyricFontSize, StringFormat={}{0:F0}}" 
                                                       Width="30" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,5">
                                            <TextBlock Text="颜色:" Width="80" VerticalAlignment="Center"/>
                                            <Button x:Name="MainLyricColorButton" Width="80" Height="25" 
                                                    Background="{Binding MainLyricColor}" Click="MainLyricColorButton_Click"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,5">
                                            <TextBlock Text="描边色:" Width="80" VerticalAlignment="Center"/>
                                            <Button x:Name="MainLyricStrokeColorButton" Width="80" Height="25" 
                                                    Background="{Binding MainLyricStrokeColor}" Click="MainLyricStrokeColorButton_Click"/>
                                        </StackPanel>
                                    </StackPanel>
                                </GroupBox>

                                <!-- 翻译歌词样式 -->
                                <GroupBox Header="翻译歌词样式" Margin="0,0,0,15">
                                    <StackPanel Margin="10">
                                        <StackPanel Orientation="Horizontal" Margin="0,5">
                                            <TextBlock Text="字体:" Width="80" VerticalAlignment="Center"/>
                                            <ComboBox x:Name="TranslationFontComboBox" Width="150" SelectedItem="{Binding TranslationFontFamily}"
>
                                                <ComboBoxItem Content="Microsoft YaHei UI"/>
                                                <ComboBoxItem Content="Microsoft YaHei"/>
                                                <ComboBoxItem Content="SimHei"/>
                                                <ComboBoxItem Content="SimSun"/>
                                                <ComboBoxItem Content="Arial"/>
                                                <ComboBoxItem Content="Times New Roman"/>
                                            </ComboBox>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,5">
                                            <TextBlock Text="大小:" Width="80" VerticalAlignment="Center"/>
                                            <Slider x:Name="TranslationSizeSlider" Width="150" Minimum="10" Maximum="32" 
                                                    Value="{Binding TranslationFontSize}" TickFrequency="2" IsSnapToTickEnabled="True"
/>
                                            <TextBlock x:Name="TranslationSizeText" Text="{Binding TranslationFontSize, StringFormat={}{0:F0}}" 
                                                       Width="30" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,5">
                                            <TextBlock Text="颜色:" Width="80" VerticalAlignment="Center"/>
                                            <Button x:Name="TranslationColorButton" Width="80" Height="25" 
                                                    Background="{Binding TranslationColor}" Click="TranslationColorButton_Click"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,5">
                                            <TextBlock Text="描边色:" Width="80" VerticalAlignment="Center"/>
                                            <Button x:Name="TranslationStrokeColorButton" Width="80" Height="25" 
                                                    Background="{Binding TranslationStrokeColor}" Click="TranslationStrokeColorButton_Click"/>
                                        </StackPanel>
                                    </StackPanel>
                                </GroupBox>

                                <!-- 背景样式 -->
                                <GroupBox Header="背景样式" Margin="0,0,0,15">
                                    <StackPanel Margin="10">
                                        <StackPanel Orientation="Horizontal" Margin="0,5">
                                            <TextBlock Text="背景色:" Width="80" VerticalAlignment="Center"/>
                                            <Button x:Name="BackgroundColorButton" Width="80" Height="25" 
                                                    Background="{Binding BackgroundColor}" Click="BackgroundColorButton_Click"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,5">
                                            <TextBlock Text="圆角:" Width="80" VerticalAlignment="Center"/>
                                            <Slider x:Name="CornerRadiusSlider" Width="150" Minimum="0" Maximum="30" 
                                                    Value="{Binding CornerRadius}" TickFrequency="2" IsSnapToTickEnabled="True"
/>
                                            <TextBlock x:Name="CornerRadiusText" Text="{Binding CornerRadius, StringFormat={}{0:F0}}" 
                                                       Width="30" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,5">
                                            <TextBlock Text="内边距:" Width="80" VerticalAlignment="Center"/>
                                            <Slider x:Name="PaddingSlider" Width="150" Minimum="5" Maximum="30" 
                                                    Value="{Binding Padding}" TickFrequency="1" IsSnapToTickEnabled="True"
/>
                                            <TextBlock x:Name="PaddingText" Text="{Binding Padding, StringFormat={}{0:F0}}" 
                                                       Width="30" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </GroupBox>
                                
                                <!-- 重置按钮 -->
                                <Button x:Name="ResetStyleButton" Content="重置为默认样式" Width="150" Height="35" 
                                        HorizontalAlignment="Left" Margin="0,10,0,0" Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Click="ResetStyleButton_Click"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- 网易云API设置 -->
                        <Border Background="#2D2D30" 
                                CornerRadius="8" 
                                Padding="20" 
                                Margin="15,10"
                                Effect="{DynamicResource MaterialDesignElevationShadow2}">
                            <StackPanel>
                                <TextBlock Text="网易云API设置" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock Text="API地址:" VerticalAlignment="Center" Margin="0,0,15,0" FontWeight="Medium"/>
                                    <TextBox x:Name="ApiUrlTextBox"
                                             Text="http://localhost:3000"
                                             Width="300"
                                             VerticalAlignment="Center"/>
                                </StackPanel>
                                <Button x:Name="TestApiButton"
                                        Content="测试API连接"
                                        Width="120"
                                        HorizontalAlignment="Left"
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        Click="TestApiButton_Click"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
        
        <!-- 底部状态栏 -->
        <Border Grid.Row="2" Background="#E8E8E8" Padding="20,10" BorderBrush="#D0D0D0" BorderThickness="0,1,0,0">
            <TextBlock x:Name="BottomStatusText" Text="准备就绪" FontSize="12" Foreground="#666"/>
        </Border>
    </Grid>
</Window>
