<Window x:Class="LyricSync.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LyricSync - 音乐同步" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <!-- 按钮样式 -->
        <Style x:Key="ControlButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#303f9f"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3f51b5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#303f9f"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 卡片样式 -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#20000000" Direction="270" ShadowDepth="3" BlurRadius="10"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="#303f9f" Padding="20,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🎵" FontSize="24" VerticalAlignment="Center" Margin="0,0,15,0"/>
                <TextBlock Text="LyricSync" FontSize="24" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                <TextBlock Text="音乐同步" FontSize="16" Foreground="#E0E0E0" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- 主内容区域 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- 连接状态卡片 -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="连接状态" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock x:Name="StatusText" Text="未监听" FontSize="16" Foreground="#666"/>
                                <TextBlock x:Name="StatusDescription" Text="请确保安卓端已启动并授予权限" FontSize="14" Foreground="#999" Margin="0,5,0,0"/>
                            </StackPanel>
                            
                            <Button x:Name="ConnectButton" Grid.Column="1" 
                                    Content="开始监听" 
                                    Style="{StaticResource ControlButtonStyle}"
                                    Click="ConnectButton_Click"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- 音乐信息卡片 -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="当前播放" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <!-- 专辑封面占位符 -->
                        <Border Width="120" Height="120" Background="#F0F0F0" CornerRadius="8" 
                                HorizontalAlignment="Center" Margin="0,0,0,20">
                            <TextBlock Text="🎵" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        
                        <!-- 音乐信息 -->
                        <TextBlock x:Name="SongTitle" Text="未播放" FontSize="20" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock x:Name="ArtistName" Text="" FontSize="16" Foreground="#666" 
                                   HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock x:Name="AlbumName" Text="" FontSize="14" Foreground="#999" 
                                   HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        
                        <!-- 播放进度条 -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock x:Name="CurrentTime" Grid.Column="0" Text="0:00" FontSize="12" Foreground="#666"/>
                            <ProgressBar x:Name="ProgressBar" Grid.Column="1" Height="4" Margin="10,0" 
                                         Background="#E0E0E0" Foreground="#303f9f" VerticalAlignment="Center"/>
                            <TextBlock x:Name="TotalTime" Grid.Column="2" Text="0:00" FontSize="12" Foreground="#666"/>
                        </Grid>
                        
                        <!-- 播放控制按钮 -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button x:Name="PreviousButton" Content="⏮" Style="{StaticResource ControlButtonStyle}" 
                                    Click="PreviousButton_Click"/>
                            <Button x:Name="PlayPauseButton" Content="⏸" Style="{StaticResource ControlButtonStyle}" 
                                    Click="PlayPauseButton_Click"/>
                            <Button x:Name="NextButton" Content="⏭" Style="{StaticResource ControlButtonStyle}" 
                                    Click="NextButton_Click"/>
                        </StackPanel>
                        
                        <!-- 控制按钮 -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                            <Button x:Name="TestSearchButton" Content="🧪 测试搜索" 
                                    Style="{StaticResource ControlButtonStyle}"
                                    Click="TestSearchButton_Click"/>
                            <Button x:Name="ExportLrcButton" Content="📄 导出LRC歌词" 
                                    Style="{StaticResource ControlButtonStyle}"
                                    Click="ExportLrcButton_Click"/>
                            <Button x:Name="ShowLyricButton" Content="🪄 显示歌词" 
                                    Style="{StaticResource ControlButtonStyle}"
                                    Click="ShowLyricButton_Click"/>
                        </StackPanel>
                        
                        <!-- 匹配歌曲信息 -->
                        <Expander x:Name="MatchedSongExpander" Header="🎯 网易云匹配信息" 
                                  Margin="0,20,0,0" IsExpanded="False">
                            <StackPanel x:Name="MatchedSongPanel" Margin="0,10,0,0">
                                <!-- 封面和歌曲信息布局 -->
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- 专辑封面 -->
                                    <Border Grid.Column="0" Width="80" Height="80" 
                                            Background="#F0F0F0" CornerRadius="8" 
                                            Margin="0,0,15,0" BorderBrush="#E0E0E0" BorderThickness="1">
                                        <Grid>
                                            <Image x:Name="AlbumCoverImage" Stretch="UniformToFill" 
                                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                                            <!-- 默认音符图标 -->
                                            <TextBlock x:Name="DefaultMusicIcon" Text="🎵" FontSize="32" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                       Foreground="#999"/>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- 歌曲基本信息 -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Top">
                                        <TextBlock x:Name="MatchedSongTitle" Text="未找到匹配歌曲" 
                                                   FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
                                        <TextBlock x:Name="MatchedSongArtist" Text="" 
                                                   FontSize="14" Foreground="#666" Margin="0,0,0,4"/>
                                        <TextBlock x:Name="MatchedSongAlbum" Text="" 
                                                   FontSize="14" Foreground="#666" Margin="0,0,0,4"/>
                                        <TextBlock x:Name="MatchedSongDuration" Text="" 
                                                   FontSize="14" Foreground="#666" Margin="0,0,0,4"/>
                                        <TextBlock x:Name="MatchedSongId" Text="" 
                                                   FontSize="14" Foreground="#666" Margin="0,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- JSON信息显示 -->
                                <Expander Header="📄 完整JSON数据" Margin="0,10,0,0" IsExpanded="False">
                                    <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
                                        <TextBox x:Name="JsonDisplayTextBox" IsReadOnly="True" 
                                                 Background="#F8F8F8" BorderThickness="0" 
                                                 FontFamily="Consolas" FontSize="11" 
                                                 TextWrapping="Wrap"/>
                                    </ScrollViewer>
                                </Expander>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </Border>
                
                <!-- 日志信息卡片 -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="连接日志" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,15">
                                <Button x:Name="ClearLogButton" Content="🧹 清理日志" 
                                        Style="{StaticResource ControlButtonStyle}" Margin="0,0,5,0"
                                        Click="ClearLogButton_Click"/>
                                <Button x:Name="LogInfoButton" Content="📊 日志信息" 
                                        Style="{StaticResource ControlButtonStyle}"
                                        Click="LogInfoButton_Click"/>
                            </StackPanel>
                        </Grid>
                        
                        <ScrollViewer Height="150" VerticalScrollBarVisibility="Auto">
                            <TextBox x:Name="LogTextBox" IsReadOnly="True" Background="#F8F8F8" 
                                     BorderThickness="0" FontFamily="Consolas" FontSize="12"/>
                        </ScrollViewer>
                        
                        <TextBlock x:Name="LogStatusText" Text="日志状态: 正常" FontSize="12" Foreground="#666" 
                                   Margin="0,10,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- 底部状态栏 -->
        <Border Grid.Row="2" Background="#E8E8E8" Padding="20,10" BorderBrush="#D0D0D0" BorderThickness="0,1,0,0">
            <TextBlock x:Name="BottomStatusText" Text="准备就绪" FontSize="12" Foreground="#666"/>
        </Border>
    </Grid>
</Window>
