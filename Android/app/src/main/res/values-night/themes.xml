<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicNotificationListener" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md3_primary_dark</item>
        <item name="colorOnPrimary">@color/md3_onPrimary_dark</item>
        <item name="colorPrimaryVariant">@color/md3_primaryContainer_dark</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md3_secondary_dark</item>
        <item name="colorOnSecondary">@color/md3_onSecondary_dark</item>
        <item name="colorSecondaryVariant">@color/md3_secondaryContainer_dark</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/md3_surface_dark</item>
        <item name="colorOnSurface">@color/md3_onSurface_dark</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/md3_background_dark</item>
        <item name="colorOnBackground">@color/md3_onBackground_dark</item>
        
        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
</resources>